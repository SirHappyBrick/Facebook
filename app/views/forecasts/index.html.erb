<p id="notice"><%= notice %></p>

<h1 id="friends-h1">Forecast</h1>

<table class="table table-strip">
  <thead>
    <tr>
      <th>Date</th>
      <th>Temperature</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forecasts.each do |forecast| %>
      <tr>
        <td><%= Time.at(forecast['dt']).to_datetime.strftime('%m/%d/%Y') %></td>
        <td><%= "#{(forecast['main']['temp'].to_i - 273.15).round(2)} *C" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary btn-add-friend"%>
